{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "./lib",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "declaration": true
  },
  "exclude": ["node_modules", "./lib/**/*"],
  "include": ["**/*.ts", "**/*.tsx"]
}